{{!-- transactions.hbs --}}
<h2 class="mt-4">Transactions List</h2>
<p>Below you can find a list of all recorded transactions.</p>
<table class="table table-hover mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Type</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
    {{#each transactions}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.type}}</td>
      <td>${{this.amount}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
